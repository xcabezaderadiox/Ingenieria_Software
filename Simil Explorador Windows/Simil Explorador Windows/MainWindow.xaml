<Window x:Class="Simil_Explorador_Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simil_Explorador_Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="123*"/>
        </Grid.RowDefinitions>
        <ToolBar>
            <Button ToolTip="Mostrar Explorador" Click="PC">
                <Image Source="Iconos/MyComputer.jpg"/>
            </Button>
            <TextBox Name="txtRuta" Grid.Row="1" Margin="5" Background="DarkBlue" AcceptsReturn = 'True' AcceptsTab = 'True' ></TextBox>
         </ToolBar>

    </Grid>
</Window>
